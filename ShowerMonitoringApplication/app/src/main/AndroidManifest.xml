<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="roth.ben.ShowerMonitoringApp">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="roth.ben.ShowerMonitoringApp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="roth.ben.ShowerMonitoringApp.WaterChart" />
        <activity android:name="roth.ben.ShowerMonitoringApp.TemperatureChart"></activity>
        <activity android:name="roth.ben.ShowerMonitoringApp.WaterCalculator"></activity>
        <activity android:name="roth.ben.ShowerMonitoringApp.ElectricityCalculator"></activity>
        <activity android:name="roth.ben.ShowerMonitoringApp.BluetoothMainActivity"></activity>
    </application>

</manifest>